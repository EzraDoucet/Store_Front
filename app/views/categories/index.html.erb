<p id="notice"><%= notice %></p>
<div class="container centered">
<h1>Categories</h1>
</div>

<div class="container centered">
  <table class="table table-striped table-hover">
    <caption>Featured Categories</caption>
    <thead>
    </thead>

    <tbody>
      <% @categories.order('name').each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= link_to fa_icon('eye'), category %></td>
          <td><%= link_to fa_icon('pencil-square-o'), edit_category_path(category) %></td>
          <td><%= link_to fa_icon('trash'), category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<div class="container centered">
  <%= link_to 'New Category', new_category_path, class: 'btn btn-primary' %>
</div>
