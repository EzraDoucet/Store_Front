<div class="container centered">
<h1>Brands</h1>
</div>

<div class="container centered">
  <table class="table table-striped table-hover table-responsive{-sm|-md|-lg|-xl}">
    <caption>Featured Brands</caption>
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @brands.order('name').each do |brand| %>
        <tr>
          <td><%= brand.name %></td>
          <td><%= link_to fa_icon('eye'), brand %></td>
          <td><%= link_to fa_icon('pencil-square-o'), edit_brand_path(brand) %></td>
          <td><%= link_to fa_icon('trash'), brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<div class="container centered">
<%= link_to 'New Brand', new_brand_path, class: 'btn btn-primary' %>
</div>