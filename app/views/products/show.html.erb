<p id="notice"><%= notice %></p>

<p class="container">
  <%#= image_tag @product.avatar.url %>
  <%= image_tag @product.avatar.url(:medium) %>
  <%#= image_tag @product.avatar.url(:thumb) %>
</p>


<div class="container" style="text-align: left">
  <p>
    <strong>Name:</strong>
    <%= @product.name %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @product.price %>
  </p>

  <p>
    <strong>Quantity:</strong>
    <%= @product.quantity %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @product.description.html_safe %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= @product.category.try(:name) %>
  </p>

  <p>
    <strong>Brand:</strong>
    <%= @product.brand.try(:name) %>
  </p>
</div>
<div class="container" style="text-align: left;">
  <div class="btn-group" role="group" aria-label="..">
    <button type="button" class="btn btn-default"><%= link_to 'Edit', edit_product_path(@product) %></button>
    <button type="button" class="btn btn-danger"><%= link_to 'Back', products_path %></button>
  </div>
</div>