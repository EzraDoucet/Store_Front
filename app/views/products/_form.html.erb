<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>
  <div class="container lefted">
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :price, input_html: {min: 0} %>
      <%= f.input :quantity, input_html: {min: 0} %>
      <%= f.input :description, as: :trix_editor %>
      <%= f.association :category %>
      <%= f.association :brand %>

      <% if @product.avatar.exists? %>
        <%= image_tag @product.avatar.url(:medium) %>
      <% end %>

      <%= f.input :avatar, as: :file %>
    </div>
    <div class="btn-group form-actions" role="group" aria-label="..">
      <%= f.button :submit, {class: 'btn btn-success', type: 'button'} %>
    </div>
  </div>
<% end %>
